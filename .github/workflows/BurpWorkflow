name: Run Burp Suite Extension

on:
  push:
    branches:
      - main

jobs:
  run_burp_extension:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Run Burp Extension Script
        run: |
          # Assuming burpsuite.jar is in the current directory
          java -jar /path/to/burpsuite.jar --cli -P <path_to_project_file> --extensions /path/to/your/extension.jar
